<% include ./partials/header.ejs %>

<main class="container">
    <h1>Enter new password</h1>

    <form method="post">
        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">Password: *</label>
            <input name="password" id="password" type="password" required />
        </div>
        <div class="form-group">
            <label for="confirm" class="col-sm-2 control-label">Confirm: *</label>
            <input name="confirm" id="confirm" type="password" required />
        </div>
        <button class="btn btn-success col-sm-offset-2">Reset Password</button>

        <hr />
        Need access?  <a href="/register" title="Register">Register</a>
    </form>

</main>

